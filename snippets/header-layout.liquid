{%- liquid
	assign _headerSticky = settings.enable_header_sticky
	assign _headerOverlay = settings.enable_header_overlay
-%}
{%- capture headerClass -%}
	{%- if _headerSticky 		-%}|header-sticky{%- endif -%}
	{%- if _headerOverlay		-%}|header-overlay{%- endif -%}
	{%- if request.design_mode 	-%}|headerADM{%- endif -%}
{%- endcapture -%}{%- assign headerClass = headerClass | strip | split: '|' | join: ' ' -%}

<header id="header-style" class="{{headerClass | strip }}">
	{%- if settings.enable_announbar -%}{%- section 'cw-announcement-bar' -%}{%- endif -%}


	{%- section 'header-1' -%}
	{%- section 'header-mobile-6' -%}


