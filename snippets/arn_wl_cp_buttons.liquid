{%liquid 
    if shop.metafields.arena.wl_cp_settings.type == blank
    assign arn_wl_cp_settings = shop.metafields.arena.wl_cp_settings
    else
    assign arn_wl_cp_settings = shop.metafields.arena.wl_cp_settings.value
    endif
%}
{% case type %}
{% when 'wl_add_btn' %}
{% if arn_wl_cp_settings.wishlist_settings.wishlist_enable == true %}
{% if arn_wl_cp_settings.wishlist_settings.launch_add.check_add_variant == true %}
<a data-arn-action="add" data-handle='{{ product.selected_or_first_available_variant.id | default: product_handle  }}' class='{{ arn_wl_cp_settings.wishlist_settings.wishlist_add_class }} {{ arn_wl_cp_settings.wishlist_settings.add_class_icon.icon_id }} {% if arn_wl_cp_settings.wishlist_settings.wishlist_enable == false %}disabled{% endif %}' href="javascript:;">
{% else %}
<a data-arn-action="add" data-handle='{{ product_handle }}' class='{{ arn_wl_cp_settings.wishlist_settings.wishlist_add_class }} {{ arn_wl_cp_settings.wishlist_settings.add_class_icon.icon_id }} {% if arn_wl_cp_settings.wishlist_settings.wishlist_enable == false %}disabled{% endif %}' href="javascript:;">
{% endif %}
<svg width="{{ arn_wl_cp_settings.wishlist_settings.add_class_icon.width }}" height="{{ arn_wl_cp_settings.wishlist_settings.add_class_icon.height }}" class="arn_icon arn_icon-add-wishlist">
    <use xlink:href="#arn_icon-add-wishlist"></use>
</svg>
<svg width="{{ arn_wl_cp_settings.wishlist_settings.add_class_icon.width }}" height="{{ arn_wl_cp_settings.wishlist_settings.add_class_icon.height }}" class="arn_icon arn_icon-preloader">
    <use xlink:href="#arn_icon-preloader"></use>
</svg>
</a>
{% endif %}
{% when 'wl_show_btn' %}
{% if arn_wl_cp_settings.wishlist_settings.wishlist_enable == true %}
<a data-arn-action="show" class='{{ arn_wl_cp_settings.wishlist_settings.wishlist_show_class }} {{ arn_wl_cp_settings.wishlist_settings.show_class_icon.icon_id }} {% if arn_wl_cp_settings.wishlist_settings.wishlist_enable == false %}disabled{% endif %}' href="javascript:;">
    <svg width="{{ arn_wl_cp_settings.wishlist_settings.show_class_icon.width }}" height="{{ arn_wl_cp_settings.wishlist_settings.show_class_icon.height }}" class="arn_icon arn_icon-show-wishlist">
        <use xlink:href="#arn_icon-show-wishlist"></use>
    </svg>
    <svg width="{{ arn_wl_cp_settings.wishlist_settings.show_class_icon.width }}" height="{{ arn_wl_cp_settings.wishlist_settings.show_class_icon.height }}" class="arn_icon arn_icon-preloader">
        <use xlink:href="#arn_icon-preloader"></use>
    </svg>
    {% if arn_wl_cp_settings.general_settings.show_number_status == true %}
    <span class="number">
        <span class="n-item">0</span>
    </span>
    {% endif %}
</a>
{% endif %}
{% when 'wl_remove-btn' %}
{% if arn_wl_cp_settings.wishlist_settings.wishlist_enable == true %}
<a data-arn-action="remove" data-handle='{{ product_handle | default: product.handle }}' class='{{ arn_wl_cp_settings.wishlist_settings.wishlist_remove_class }} {{ arn_wl_cp_settings.wishlist_settings.remove_class_icon.icon_id }} {% if arn_wl_cp_settings.wishlist_settings.wishlist_enable == false %}disabled{% endif %}' href="javascript:;">
    <svg width="{{ arn_wl_cp_settings.wishlist_settings.remove_class_icon.width }}" height="{{ arn_wl_cp_settings.wishlist_settings.remove_class_icon.height }}" class="arn_icon arn_icon-remove-wishlist">
        <use xlink:href="#arn_icon-remove-wishlist"></use>
    </svg>
    <svg width="{{ arn_wl_cp_settings.wishlist_settings.remove_class_icon.width }}" height="{{ arn_wl_cp_settings.wishlist_settings.remove_class_icon.height }}" class="arn_icon arn_icon-preloader">
        <use xlink:href="#arn_icon-preloader"></use>
    </svg>
</a>
{% endif %}
{% when 'cp_add_btn' %}
{% if arn_wl_cp_settings.compare_settings.compare_enable == true %}
<a data-arn-action="add" data-handle='{{ product_handle | default: product.handle }}' class='{{ arn_wl_cp_settings.compare_settings.compare_add_class }} {{ arn_wl_cp_settings.compare_settings.add_class_icon.icon_id }} {% if arn_wl_cp_settings.compare_settings.compare_enable == false %}disabled{% endif %}' href="javascript:;">
    <svg width="{{ arn_wl_cp_settings.compare_settings.add_class_icon.width }}" height="{{ arn_wl_cp_settings.compare_settings.add_class_icon.height }}" class="arn_icon arn_icon-add-compare">
        <use xlink:href="#arn_icon-add-compare"></use>
    </svg>
    <svg width="{{ arn_wl_cp_settings.compare_settings.add_class_icon.width }}" height="{{ arn_wl_cp_settings.compare_settings.add_class_icon.height }}" class="arn_icon arn_icon-preloader">
        <use xlink:href="#arn_icon-preloader"></use>
    </svg>
</a>
{% endif %}
{% when 'cp_show_btn' %}
{% if arn_wl_cp_settings.compare_settings.compare_enable == true %}
<a data-arn-action="show" class='{{ arn_wl_cp_settings.compare_settings.compare_show_class }} {{ arn_wl_cp_settings.compare_settings.show_class_icon.icon_id }} {% if arn_wl_cp_settings.compare_settings.compare_enable == false %}disabled{% endif %}' href="javascript:;">
    <svg width="{{ arn_wl_cp_settings.compare_settings.show_class_icon.width }}" height="{{ arn_wl_cp_settings.compare_settings.show_class_icon.height }}" class="arn_icon arn_icon-show-compare">
        <use xlink:href="#arn_icon-show-compare"></use>
    </svg>
    <svg width="{{ arn_wl_cp_settings.compare_settings.show_class_icon.width }}" height="{{ arn_wl_cp_settings.compare_settings.show_class_icon.height }}" class="arn_icon arn_icon-preloader">
        <use xlink:href="#arn_icon-preloader"></use>
    </svg>
    {% if arn_wl_cp_settings.general_settings.show_number_status == true %}
    <span class="number">
        <span class="n-item">0</span>
    </span>
    {% endif %}
</a>
{% endif %}
{% when 'cp_remove_btn' %}
{% if arn_wl_cp_settings.compare_settings.compare_enable == true %}
<a data-arn-action="remove" data-handle='{{ product_handle | default: product.handle }}' class='{{ arn_wl_cp_settings.compare_settings.compare_remove_class }} {{ arn_wl_cp_settings.compare_settings.remove_class_icon.icon_id }} {% if arn_wl_cp_settings.compare_settings.compare_enable == false %}disabled{% endif %}' href="javascript:;">
    <svg width="{{ arn_wl_cp_settings.compare_settings.remove_class_icon.width }}" height="{{ arn_wl_cp_settings.compare_settings.remove_class_icon.height }}" class="arn_icon arn_icon-remove-compare">
        <use xlink:href="#arn_icon-remove-compare"></use>
    </svg>
    <svg width="{{ arn_wl_cp_settings.compare_settings.remove_class_icon.width }}" height="{{ arn_wl_cp_settings.compare_settings.remove_class_icon.height }}" class="arn_icon arn_icon-preloader">
        <use xlink:href="#arn_icon-preloader"></use>
    </svg>
</a>
{% endif %}
{% endcase %}

