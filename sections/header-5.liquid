        },
        {
          "type": "text",
          "id": "line_height_2",
          "label": "Line height",
          "info": "E.g: 26px"
        }
      ]
    },
    {
      "type": "ms_product",
      "name": "-- [style] Product",
      "settings": [
        {
          "type": "header",
          "content": "Price 1 settings"
        },
        {
          "type": "text",
          "id": "font_size_1",
          "label": "Font size",
