          "id": "font_size_1",
          "label": "Font size",
          "info": "E.g: 24px"
        },
        {
          "type": "color",
          "id": "color_1",
          "label": "Color"
        },
        {
          "type": "range",
          "id": "font_weight_1",
          "label": "Font weight",
          "min": 0,
          "max": 900,
          "step": 100,
          "default": 0,
          "info": "0 is auto"
        },
        {
          "type": "text",
          "id": "margin_1",
          "label": "Margin",
          "info": "Order: Top Right Bottom Left. E.g: 5px 8px 5px 8px"
        },
        {
          "type": "text",
          "id": "line_height_1",
          "label": "Line height",
          "info": "E.g: 26px"
        },
        {
          "type": "header",
          "content": "Subheading settings"
        },
        {
          "type": "text",
          "id": "font_size_2",
          "label": "Font size",
          "info": "E.g: 24px"
        },
        {
          "type": "color",
          "id": "color_2",
          "label": "Color"
        },
        {
