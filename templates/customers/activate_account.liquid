<div class="container text-center">
  <div id="template">
    <div class="template_header">
      <h2 class="title">{{- 'customer.activate_account.submit' | t -}}</h2>
      <p class="note">{{- 'customer.activate_account.subtext' | t -}}</p>
    </div>

    {% form 'activate_customer_password', class: 'form-account' %}
      {{ form.errors | default_errors }}

      <div id="password" class="form-control">
        <label class="large" for="password">{{- 'customer.activate_account.password' | t -}}</label>
        <input type="password" name="customer[password]" id="customer_password"/>
      </div>
      <div id="password_confirm" class="form-control">
        <label class="large" for="password_confirmation">{{- 'customer.activate_account.password_confirm' | t -}}</label>
        <input type="password" name="customer[password_confirmation]" id="customer_password_confirmation"/>
      </div>
      <div class="action_bottom">
        <input class="btn btn-1" type="submit" value="{{- 'customer.activate_account.submit' | t -}}"/>
        <span class="note">{{ 'customer.general.or' | t }}</span>
        <input type="submit" class="btn btn-2 cancel" name="decline" id="customer_decline" value="{{- 'customer.activate_account.cancel' | t -}}"/>
      </div>
    {% endform %}
  </div>
</div>
